@model MidTermSolution.Models.Reservation

@{
    ViewBag.Title = "Delete Reservation";
}

<h2>Delete Reservation</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Reservation Date :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReservationDate)
        </dd>

        <dt>
            Customer ID :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerID)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-2 col-md-push-0">
                <button type="submit" class="btn btn-danger">
                    <span>Delete Confirm</span>
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                </button>
            </div>
            <div class="col-md-2 col-md-push-0">
                <a href="@Url.Action("ReservationsList", "Admin", null)" class="btn btn-primary">
                    Back to List
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                </a>
            </div>
        </div>
        <br/>
    }
</div>
