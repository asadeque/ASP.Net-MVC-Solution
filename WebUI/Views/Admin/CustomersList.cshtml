@model IEnumerable<MidTermSolution.Models.Customer>

@{
    ViewBag.Title = "Customers";

}

<h2>Customers List</h2>
<div class="col-md-4">
    <a href="@Url.Action("CreateCustomer", "Admin", null)" class="btn btn-primary">
        Create New
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>
</div>
<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            Address 1
        </th>
        <th>
            Address 2
        </th>
        <th>
            Town
        </th>
        <th>
           Province
        </th>
        <th>
            Postal Code
        </th>
        <th>
            Email Address
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Town)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Province)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostalCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            <div class="col-md-4">
                <a href="@Url.Action("DetailsCustomer", "Admin", new { id = item.CustomerID })" class="btn btn-primary">
                    Details
                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("EditCustomer", "Admin", new { id = item.CustomerID })" class="btn btn-primary">
                    Edit
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("DeleteCustomer", "Admin", new { id = item.CustomerID })" class="btn btn-primary">
                    Remove
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </div>
        </td>
    </tr>
}

</table>
<br/>
<div class="col-md-4">
    <a href="@Url.Action("Index", "Admin", null)" class="btn btn-primary">
        Back to Admin
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    </a>
</div>
<br/>
