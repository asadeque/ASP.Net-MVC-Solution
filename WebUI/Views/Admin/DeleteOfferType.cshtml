@model MidTermSolution.Models.OfferType

@{
    ViewBag.Title = "Delete Offer Type";
}

<h2>Delete Offer Type</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Offer Module :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OfferModule)
        </dd>

        <dt>
           Type :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            Description :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-2 col-md-push-0">
                <button type="submit" class="btn btn-danger">
                    <span>Delete Confirm</span>
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                </button>
            </div>
            <div class="col-md-2 col-md-push-0">
                <a href="@Url.Action("OfferTypeList", "Admin", null)" class="btn btn-primary">
                    Back to List
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                </a>
            </div>
        </div>
        <br/>
    }
</div>
