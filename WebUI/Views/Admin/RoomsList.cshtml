@model IEnumerable<MidTermSolution.Models.Room>

@{
    ViewBag.Title = "Our Rooms";
}

<h2>Rooms List</h2>
<div class="col-md-4">
    <a href="@Url.Action("CreateRoom", "Admin", null)" class="btn btn-primary">
        Create New
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>
</div>
<table class="table">
    <tr>
        <th>
            Image Url
        </th>
        <th>
            Price
        </th>
        <th>
            Unit
        </th>
        <th>
            Room Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ImageUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomDescription)
        </td>
        @*<td>
            @Html.ActionLink("Edit", "EditRoom", new { id = item.RoomID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Details", "DetailsRoom", new { id = item.RoomID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Delete", "DeleteRoom", new { id = item.RoomID }, new { @class = "btn btn-success" })
        </td>*@
        <td>
            <div class="col-md-4">
                <a href="@Url.Action("DetailsRoom", "Admin", new { id = item.RoomID })" class="btn btn-primary">
                    Details
                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("EditRoom", "Admin", new { id = item.RoomID })" class="btn btn-primary">
                    Edit
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("DeleteRoom", "Admin", new { id = item.RoomID })" class="btn btn-primary">
                    Remove
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </div>
        </td>
    </tr>
}

</table>

<br />
<div class="col-md-4">
    <a href="@Url.Action("Index", "Admin", null)" class="btn btn-primary">
        Back to Admin
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    </a>
</div>
<br />

