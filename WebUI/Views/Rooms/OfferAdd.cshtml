@model IEnumerable<MidTermSolution.Models.Offer>

@{
    ViewBag.Title = "OfferAdd";
}

<h2>Add Offer to Booking</h2>

<p>
    <a href="@Url.Action("BookingSummary", "Rooms")" class="btn btn-primary">
        Back to List &nbsp;
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            Offer Code
        </th>
        <th>
            Offer Description
        </th>
        <th>
            Value
        </th>
        <th>
            Minimum Spend
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OfferCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OfferDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinSpend)
        </td>

        <td>
            <a href="@Url.Action("AddOfferToBooking", "Rooms", new { code = item.OfferCode })" class="btn btn-primary col-md-6 col-xs-12 margin-top-10">
                Add To Booking
                <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
}
</table>
